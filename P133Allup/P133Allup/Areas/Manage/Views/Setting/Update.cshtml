@model Setting

@{
    ViewData["Title"] = "Update";
    //IEnumerable<Category> categories = ViewBag.Categories;
    //SelectList selectLists = new SelectList(categories, nameof(Category.Id), nameof(Category.Name));
}

<div class="row">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Setting Update Page</h1>
    </div>
</div>
<div class=" row">
    <div class="col-lg-8">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="Value" class="form-label">@Model.Key</label>
                @if (Model.Key != "Logo")
                {
                    <input asp-for="Value" class="form-control">
                    <span asp-validation-for="Value" class="text text-danger"></span>
                }else
                {
                    <input asp-for="File" accept="image/png" class="form-control">
                    <span asp-validation-for="File" class="text text-danger"></span>
                }
                
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_Validation")
}