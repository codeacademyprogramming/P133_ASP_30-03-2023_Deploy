@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<!--====== Login Part Start ======-->

<section class="login-area pt-10">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-30">
                    <h4 class="allup-title">Login to Your Account</h4>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text text-danger"></div>
                        <div class="single-form">
                            <input asp-for="Email" placeholder="Email">
                            <span asp-validation-for="Email" class="text text-danger"></span>
                        </div>
                        <div class="single-form">
                            <input asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password" class="text text-danger"></span>
                        </div>
                        <div class="custom-checkbox mt-30">
                            <input asp-for="RemindMe" id="account">
                            <label for="account"></label>
                            <p>Remember me</p>
                        </div>
                        <div class="single-form">
                            <button type="submit" class="main-btn main-btn-2">Login</button>
                        </div>
                    </form>
                    <p class="mt-20"><a href="#">Lost your password?</a></p>
                    <p class="mt-10">No account? <a asp-controller="account" asp-action="Register">Create one here.</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

<!--====== Login Part Ends ======-->
@section Scripts{
    @await Html.PartialAsync("_Validation")
                            }